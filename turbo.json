{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"globalEnv": [],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"env": [],
			"outputs": ["build/**", "dist/**", ".next/**", "!.next/cache/**"]
		},
		"check": {
			"dependsOn": ["^build"]
		},
		"clean": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"tsc": {
			"cache": true,
			"dependsOn": ["^tsc"]
		}
	}
}
