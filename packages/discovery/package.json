{
	"dependencies": {
		"@clack/prompts": "^0.10.0",
		"@skills-supply/core": "*",
		"@skills-supply/database": "*",
		"commander": "^14.0.2",
		"consola": "^3.4.2",
		"dotenv": "^17.2.3",
		"kysely": "^0.28.9",
		"pg-boss": "^12.5.4",
		"playwright-core": "^1.57.0",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@types/node": "^25"
	},
	"name": "@skills-supply/discovery",
	"private": true,
	"scripts": {
		"build": "bun run build:binary && bun run build:node",
		"build:binary": "bun build ./cli.ts --compile --outfile ./bin/discovery --external playwright-core",
		"build:node": "bun build ./cli.ts --outdir ./dist --target node --external playwright-core",
		"clean": "rm -rf dist bin",
		"cli": "npm run build:node && node ./dist/cli.js",
		"tsc": "tsc --build"
	},
	"type": "module",
	"version": "0.1.0"
}
